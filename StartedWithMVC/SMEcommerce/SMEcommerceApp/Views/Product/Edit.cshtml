@model SMEcommerceApp.Models.ProductModels.ProductEditVm
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Product</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label for="name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter Name">
                <input type="hidden" asp-for="Id" />
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" asp-for="Description" placeholder="Enter Description"></textarea>
            </div>


            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" asp-for="Price" placeholder="Enter Price">
            </div>

            <div class="form-group">
                <label for="date">Manufacture Date</label>
                <input class="form-control" asp-for="ManufacturerDate">
            </div>

            <div class="form-group">
                <label for="ecode">Category</label>
                <select asp-for="CategoryId" asp-items="@Model.Categoies" class="form-control" aria-label="Default select example">
                    <option selected>Select Category</option>

                </select>
            </div>


        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>


